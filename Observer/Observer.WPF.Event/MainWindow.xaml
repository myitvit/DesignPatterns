<Window x:Class="Observer.WPF.Event.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Observer.WPF.Event"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <Grid Background="{StaticResource ClientBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TextBlock1" Grid.Row="0"
                   Style="{StaticResource TextBlockStyle}" />
        <TextBlock x:Name="TextBlock2" Grid.Row="1"
                   Style="{StaticResource TextBlockStyle}" />
        <Button x:Name="ClickMeButton" Grid.Row="2"
                Style="{StaticResource ButtonStyle}"
                Content="Click Me!"/>
    </Grid>
</Window>
